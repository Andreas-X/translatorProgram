			case "spanish":
				System.out.println(earth[2] + ". Es un planeta del sistema solar.");
				break;
			default:
				   System.out.println("No such word in the Program");
			}
		break;
		
			
		case "house":
			switch(convertee) {
			case "english":
				System.out.println(house[0] + ". It is a building people live in.");
				break;
			case "french":
				System.out.println(house[1] + ". C'est un bâtiment dans lequel les gens vivent.");
