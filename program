			case "spanish":
				System.out.println(house[2] + ". Es un edificio en el que vive la gente.");
				break;
			default:
				   System.out.println("No such word in the Program");
			}
		break;
			
		case "paint":
			switch(convertee) {
			case "english":
				System.out.println(paint[0] + ". It is a pigmented liquid.");
				break;
			case "french":
				System.out.println(paint[1] + ". C'est un liquide pigmenté.");
				break;
			case "spanish":
				System.out.println(paint[2] + ". Es un liquido pigmentado.");
				break;
			default:
				   System.out.println("No such word in the Program");
