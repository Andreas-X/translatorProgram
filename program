		String [ ] machines = {"Plane" , "Train" , "Entrenar"};
		String [ ] occupation = {"Occupation", "Occupation" , "Ocupación"};
		String [ ] mathematics = {"Mathematics" , "Mathématiques" , "Matemáticas"};
		String [ ] earth = {"Earth" , "Terre" , "Tierra"};
		String [ ] house = {"Mansion" , "Manoir" , "Mansión"};
		String [ ] paint = {"Paint" , "Peindre" , "Pintar"};
		String [ ] gold = {"Gold", "Or" , "Oro"};
		String [ ] wolf = {"Wolf" , "Loup" , "Lobo"};
		String [ ] steal = {"Steal" , "Voler" , "Robar"};
		
		
		//Nested switch statements in a switch statement.

	
		switch(answer) {
		case "fruit":
			switch(convertee) {
			   case "english":
				   System.out.println(fruit[0] + ". This is english for apple and can be used as an adjective or noun in a sentence. ");
				   break;
			   case "french":
				   System.out.println(fruit[1] + ". Ceci est français pour pomme et peut être utilisé comme adjectif ou nom dans une phrase. ");
				   break;
			   case "spanish":
				   System.out.print(fruit[2] + ". Esto es en español para manzana y se puede usar como adjetivo o sustantivo en una oración. ");
				   break;
			   default:
				   System.out.println("No such word in the Program");
			}
		break;
			
		//Confusing. I know. :/
			
		case "drink":
			switch(convertee) {
			case "english":
				System.out.println(drink[0] + ". This word can be used as a noun in a sentence.");
				break;
			case "french":
				System.out.println(drink[1] + ". Ce mot peut être utilisé comme nom dans une phrase.");
				break;
		    case "spanish":
		    	System.out.println(drink[2] + ". Esta palabra se puede usar como sustantivo en una oración.");
		    	break;
		    default:
				   System.out.println("No such word in the Program");
			}
		break;
			
		
		//All this blocky code is the best way because it makes it easy to read and easy to find bugs.
			
		case "store":
			switch(convertee) {
				case "english":
					System.out.println(store[0] + ". It is the place where goods are bought.");
					break;
				case "french":
					System.out.println(store[1] +  ". C'est l'endroit où les marchandises sont achetées.");
