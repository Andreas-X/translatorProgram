				System.out.println(entertainment[2] + ". Es una plataforma para el entretenimiento de programas de televisión.");
				break;
			default:
				   System.out.println("No such word in the Program");
			}
		break;
		
			
		case "food":
			switch(convertee) {
				case "english":
					System.out.println(food[0] + ". It is a substance we take in to give ourselves nutrients.");
					break;
				case "french":
					System.out.println(food[1] + ". C'est une substance que nous absorbons pour nous donner des nutriments.");
					break;
				case "spanish":
					System.out.println(food[2] + ". Es una sustancia que ingerimos para darnos nutrientes.");
					break;
				default:
					   System.out.println("No such word in the Program");
			}
		break;
			
			
		case "car":
			switch(convertee) {
			case "english":
				System.out.println(car[0] + ". It is a machine used to move around.");			
				break;
			case "french":
				System.out.println(car[1] + ". C'est une machine utilisée pour se déplacer.");
				break;
			case "spanish":
				System.out.println(car[2] + ". Es una maquina que se usa para moverse.");
				break;
			default:
				   System.out.println("No such word in the Program");
			}
		break;
			
		//I have encountered a good amount of bugs just making this program.
		
		case "machines":
			switch(convertee) {
			case "english":
				System.out.println(machines[0]  + ". It is an automobile machine used to move from place to place.");
				break;
			case "french":
				System.out.println(machines[1] + ". Il est utilisé pour se déplacer d'un endroit à l'autre.");
				break;
			case "spanish":
				System.out.println(machines[2] + ". Se usa para moverse de un lugar a otro.");
				break;
			default:
				   System.out.println("No such word in the Program");
			}
		break;
		
			
		case "occupation":
			switch(convertee) {
			case"english":
				System.out.println(occupation[0] + ". It is a Profession.");
				break;
			case "french":
				System.out.println(occupation[1] + ". C'est une profession.");
				break;
			case "spanish":
				System.out.println(occupation[2] + ". Es una profesión.");
				break;
			default:
				   System.out.println("No such word in the Program");
			}
		break;
		
			
		case "mathematics":
			switch(convertee) {
			case "english":
				System.out.println(mathematics[0] + ". It is the science of numbers.");
				break;
			case "french":
				System.out.println(mathematics[1] + ". C'est la science des nombres.");
				break;
			case "spanish":
				System.out.println(mathematics[2] + ". Es la ciencia de los números.");
				break;
			default:
				   System.out.println("No such word in the Program");
			}
		break;
		
			
		case "earth":
			switch(convertee) {
			case "english":
				System.out.println(earth[0] + ". It is a planet in the solar system.");
				break;
			case "french":
				System.out.println(earth[1]  + ". C'est une planète dans le système solaire.");
