		case "gold":
			switch(convertee) {
			case "english":
				System.out.println(gold[0] + "It is an element");
				break;
			case "french":
				System.out.println(gold[1] + ". C'est un élément");
				break;
			case "spanish":
				System.out.println(gold[2] + ". Es un elemento");
				break;
			}
		break;
		
		case "wolf":
			switch(convertee) {
			case "english":
				System.out.println(wolf[0] + ". It is noble animal");
				break;
			case "french":
				System.out.println(wolf[1] + ". C'est un animal noble");
				break;
			case "spanish":
				System.out.println(wolf[2] + ". Es un animal noble");
				break;
			}
		break;
		
		case "steal":
			switch(convertee) {
			case "english":
				System.out.println(steal[0] + ". It is a bad thing to do");
				break;
			case "french":
				System.out.println(steal[1] + ". C'est une mauvaise chose à faire");
